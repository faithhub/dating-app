<!-- beautify ignore:start -->
<html
  lang="en"
  class="light-style layout-navbar-fixed layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="/assets/"
  data-template="vertical-menu-template"
>
  <%- include("../../../partials/header") %>

  <style>
    .badge-info {
    color: #fff;
    background-color: #17a2b8;
}
.badge-dark {
    color: #fff;
    background-color: #343a40;
}
.badge {
    text-transform: uppercase;
    line-height: .60;
}
.badge-secondary {
    color: #fff;
    background-color: #6c757d;
}
  </style>
  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include("../../../partials/sideMenu") %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include("../../../partials/nav") %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xl flex-grow-1 container-p-y">
              <div class="row">
                <div class="col-lg-12 col-12 mb-lg-0 mb-4">
                  <div class="card invoice-preview-card">
                    <div class="card-body">
                      <div class="row p-sm-3 p-0">
                        <div class="col-md-6 mb-md-0 mb-4">
                          <div class="d-flex svg-illustration">
                            <h4 class="app-brand demo text-body fw-bolder">
                              User Details
                            </h4>
                          </div>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Phone:&nbsp; <%= locals.user.phone || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Name:&nbsp; <%= locals.user.name || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Email:&nbsp; <%= locals.user.email || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            DOB:&nbsp; <%= locals.user.dob || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Account Type:&nbsp; <%= locals.user.account_purpose
                            || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Gender:&nbsp; <%= locals.user.gender || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Interest:&nbsp; <% if (locals.user.interests) { %>
                            <% locals.user.interests.forEach(element=> { %>
                            <span class="badge badge-pill badge-secondary"><%= element %></span>&nbsp;&nbsp;
                            <% }) %> <% } else { %> --- <% } %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            About:&nbsp; <%= locals.user.about || "---" %>
                          </h6>
                          <h6 class="app-brand demo text-body fw-bolder">
                            Joined On:&nbsp; <%= locals.moment(user.created_at)
                            %>
                          </h6>
                        </div>
                      </div>

                      <hr class="my-4 mx-n4" />

                      <div class="row p-sm-3 p-0">
                        <div class="col-md-12 mb-md-0 mb-4">
                          <div class="d-flex svg-illustration">
                            <h4 class="app-brand demo text-body fw-bolder">
                              Posts
                            </h4>
                          </div>
                          <div class="card-datatable table-responsive">
                            <table class="dt-responsive table border-top">
                              <thead>
                                <tr>
                                  <th>S/N</th>
                                  <th>Image</th>
                                  <th>Tag</th>
                                  <th>Likes</th>
                                  <th>Uploaded On</th>
                                  <!-- <th>Action</th> -->
                                </tr>
                              </thead>
                              <tbody>
                                <% if(locals.posts){%> <%
                                posts.forEach(function(post) { %>
                                <tr>
                                  <td><%= sn++ %></td>
                                  <td><img src="<%= post.image.url || "---" %>"></td>
                                  <td><%= post.tag || "---" %></td>
                                  <td><%= post.likes || 0 %></td>
                                  <td><%= locals.moment(post.created_at) %></td>
                            <!--   <td>
                                    <a
                                      onclick="return confirm('Are you sure you want to delete this post?')"
                                      href="/admin/delete/post/<%= post.id %>"
                                      class="btn btn-sm btn-danger"
                                    >
                                      Delete
                                    </a>
                                    <a
                                      href="/admin/post/<%= post.id %>"
                                      class="btn btn-sm btn-success"
                                      >View</a
                                    >
                                     <a href="/admin/edit/post/<%= post.id %>" class="btn btn-sm btn-success">Edit</a> 
                                  </td> -->
                                </tr>
                                <% }) %> 
                                <% } %>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                      <!-- <hr class="my-4 mx-n4" /> -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->

            <!-- Footer -->
            <%- include("../../../partials/footer") %>
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>

      <!-- Drag Target Area To SlideIn Menu On Small Screens -->
      <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <%- include("../../../partials/script") %>
  </body>
</html>